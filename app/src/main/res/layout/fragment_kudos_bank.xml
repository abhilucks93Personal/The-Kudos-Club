<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="@dimen/_4sdp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_6sdp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:background="@drawable/layout_bg_kudos_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_kudos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text=" My Kudos "
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_team_kudos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text=" Team Kudos "
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_global_kudos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text=" Global Kudos "
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:background="@color/color_light_grey"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_more_horiz_black_24dp"
                android:tint="@color/colorGrey" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="My Kudos"
                android:textColor="@color/tab_background_selected"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/tab_background_selected" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="@string/content_my_kudos"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="100 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />


                    <LinearLayout
                        android:id="@+id/ll_bar_recognize"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="104dp"
                        android:background="@drawable/layout_bg_bar"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_bar_recognize"
                            android:layout_width="match_parent"
                            android:layout_height="16.67dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/layout_bg_bar_recognize" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bar_recognize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="16.67 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Transfer points to redeem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                    <ImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/logo_recognition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Recognize"
                        android:textColor="@color/tab_background_selected"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="100 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <LinearLayout
                        android:id="@+id/ll_bar_ownership"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="104dp"
                        android:background="@drawable/layout_bg_bar"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_bar_ownership"
                            android:layout_width="match_parent"
                            android:layout_height="27.67dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/layout_bg_bar_ownership" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bar_ownership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="27.67 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Transfer points to redeem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                    <ImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/logo_ownership" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ownership"
                        android:textColor="@color/tab_background_selected"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="100 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <LinearLayout
                        android:id="@+id/ll_bar_dynamic"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="104dp"
                        android:background="@drawable/layout_bg_bar"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_bar_dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="35.83dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/layout_bg_bar_dynamic" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bar_dynamic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="35.83 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Transfer points to redeem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                    <ImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/logo_dynamic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dynamic"
                        android:textColor="@color/tab_background_selected"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="100 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <LinearLayout
                        android:id="@+id/ll_bar_collaboration"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="104dp"
                        android:background="@drawable/layout_bg_bar"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_bar_collaboration"
                            android:layout_width="match_parent"
                            android:layout_height="14.17dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/layout_bg_bar_collaboration" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bar_collaboration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="14.17 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Transfer points to redeem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                    <ImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/logo_collaboration" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Collaboration"
                        android:textColor="@color/tab_background_selected"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="100 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <LinearLayout
                        android:id="@+id/ll_bar_transparency"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="104dp"
                        android:background="@drawable/layout_bg_bar"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view_bar_transparency"
                            android:layout_width="match_parent"
                            android:layout_height="7.92dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/layout_bg_bar_transparency" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bar_transparency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:text="7.92 %"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Transfer points to redeem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                    <ImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/logo_transparency" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Transparency"
                        android:textColor="@color/tab_background_selected"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/half_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">


                <TextView
                    android:id="@+id/tv_engagement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="My overall engagement : 8.59%"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_exceptional_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="Exceptional points earned : 0"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_more_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/header"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="@drawable/layout_bg_kudos_more"
        android:elevation="@dimen/_4sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="Details"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_points_awarded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="Point Awarded"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>